// Online C compiler to run C program online
#include <stdio.h>
main()
{
    int a[3],i;
    int *ptr;
    int sum=0;
    printf("enter a no=");
    for(i=0;i<3;i++)
    {
        scanf("%d",&a[i]);
    }
    ptr=&a[0];
    for(i=0;i<3;i++)
    {
        sum=sum+(*ptr);
        ptr=ptr+1;
    }
    printf("sum is %d",sum);
}
